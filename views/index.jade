extends layout

block content
  nav
    .brand-logo.center
      a#logo(href='/')= title
    .row.center#paint
      .col.s1#paint1 1
      .col.s1#paint2 2
      .col.s1#paint3 3
      .col.s1#paint4 4
      .col.s1#paint5 5
      .col.s1#paint6 6
      .col.s1#paint7 7
      .col.s1#paint8 8
      .col.s1#paint9 9
      .col.s1#paint10 10
      .col.s1#paint11 11
      .col.s1#paint12 12

  .container
    .row
    .row
      .col.s12.m12.l4.center
        a.btn-floating.btn-large.waves-effect.waves-light.red.lighten-3.disabled#removeRed
          i.material-icons remove
        a.btn-floating.btn-large.waves-effect.waves-light.red#addRed
          i.material-icons add
        p#totalRed 0
      .col.s12.m12.l4.center
        a.btn-floating.btn-large.waves-effect.waves-light.yellow.lighten-2.disabled#removeYellow
          i.material-icons remove
        a.btn-floating.btn-large.waves-effect.waves-light.yellow.darken-1#addYellow
          i.material-icons add
        p#totalYellow 0
        a.btn-floating.btn-flat.btn-large.waves-effect.waves-light.disabled#addToPalette
          i.col.s12.material-icons.black-text palette
      .col.s12.m12.l4.center
        a.btn-floating.btn-large.waves-effect.waves-light.blue.lighten-1.disabled#removeBlue
          i.material-icons remove
        a.btn-floating.btn-large.waves-effect.waves-light.blue.darken-3#addBlue
          i.material-icons add
        p#totalBlue 0
    .row
      table.centered
        tbody#palette
          tr(style='display: none;')
            td
              a.waves-effect.waves-light.btn-large
            td
              a.center.btn-floating.btn-large.waves-effect.waves-light.red#addRed
            td
              a.btn-floating.btn-large.waves-effect.waves-light.yellow.darken-1#addYellow
            td
              a.btn-floating.btn-large.waves-effect.waves-light.blue.darken-3#addBlue
